@page "/finished_lock_screen"

<PageTitle>lock screen</PageTitle>
<div class="lockscreen">
    <div class="empty_space"></div>
    <div class="notification">
        <h1>Enjoy your stay!</h1>
        <p>You can use the notification to request drink refills, request assistance from a server, or request your bill!</p>
        <p id="break_line">________________________________________________</p>
        <input type="button" value="Request Help" @onclick="showNotification" />
        <input type="button" value="Request Bill" @onclick="showBillNotification" />
        <input type="button" value="Order Drink" onclick="window.location.href='/counter';" />
    </div>

    <div class="notification" style=@displayStatus @onclick="hideNotification">
        <h1>Help is on the way</h1>
        <p>A server will be with you shortly. Thank you for waiting.</p>
    </div>

    <div class="notification" style=@billDisplayStatus @onclick="hideBillNotification">
        <h1>Bill is on the way</h1>
        <p>A server will bring you the bill shortly. Thank you for your visit.</p>
    </div>
</div>

@code {
    string displayStatus = "display: none;";
    string billDisplayStatus = "display: none;";

    private void hideNotification()
    {
        displayStatus = "display: none;";
    }

    private void showNotification()
    {
        displayStatus = "";
    }

    private void hideBillNotification()
    {
        billDisplayStatus = "display: none;";
    }

    private void showBillNotification()
    {
        billDisplayStatus = "";
    }
}
