@page "/initial_lock_screen"

<PageTitle>lock screen</PageTitle>
<div class="lockscreen">
    <div class="empty_space"></div>
    <div class="notification">
        <h1>You're at Table @table_num</h1>
        <p>Simply sit down at this table and press Order Now to begin your dining experience</p>
        <p id="break_line">________________________________________________</p>
        <input type="button" value="Start Now!" onclick="window.location.href='/';" />
    </div>
</div>

@code {
    private int table_num = 5;
}
