@page "/ordered_lock_screen"

<PageTitle>lock screen</PageTitle>
<div class="lockscreen">
    <div class="empty_space"></div>
    <div class="notification">
        <h1>Order ETA: @timeETA min</h1>
        <p>Your oder is on the way! Use the buttons below to request a Refill or request assistance from a server.</p>
        <p id="break_line">________________________________________________</p>
        <input type="button" value=@requestHelp @onclick="showNotification" />
        <input type="button" value="Order More" onclick="window.location.href='/';" />
    </div>

    <div class="notification" style=@displayStatus @onclick="hideNotification">
        <h1>Help is on the way</h1>
        <p>A server will be with you shortly. Thank you for waiting.</p>
    </div>
</div>

@code {
    private int timeETA = 10;
    string displayStatus = "display: none;";
    string requestHelp = "Request Help";

    private void hideNotification()
    {
        displayStatus = "display: none;";
    }

    private void showNotification()
    {
        if (requestHelp == "Request Help")
        {
            requestHelp = "Are you sure?";
        }
        else
        {
            displayStatus = "";
            requestHelp = "Request Help";
        }
    }
}

